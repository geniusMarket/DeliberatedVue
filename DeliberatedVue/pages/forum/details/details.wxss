.userBox{
    height: 80rpx; 
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: #d4d4d8 solid 5rpx;
}
.userBox .userInform{
    height: 75rpx;
    margin-left: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.userBox .userInform image{
    height: 60rpx;
}

.locateBox{
    height: 116rpx;
    width: 100%;
    border-bottom: #bbbbbb solid 5rpx;
    display: flex;
    align-items: center;
}
.locateBox .outLocate{
    height: 65rpx;
    width: 390rpx;
    border-radius: 40rpx;
    background-color: #c3e8d8;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    right: 10rpx;
}
.locateBox .outLocate text{
    margin-right: 20rpx;
    margin-bottom: 5rpx;
}
.locateBox .outLocate image{
    margin-left: 10rpx;
    height: 58rpx;
}

.textBodyBox{
    margin: 20rpx 7% ;
}

.fillBox{
    height: 15rpx;
}
.taberBoxBlock{
    height: 60rpx;
    background-color: #f6f6f6;
    position: relative;
    display: flex;
    align-items: center;
    border-radius: 35rpx;
    border: 3rpx solid #dddddd;
}
.taberBoxBlock .taberBox{
    height: 50rpx;
    right: 12rpx;
    bottom: 5rpx;
    position: absolute;
    display: flex;
    flex-direction: row;
}
.taberBoxBlock .taberBox .outTaber{
    height: 46rpx;
    width: 135rpx;
    display: flex;
    flex-direction: row;
}
.taberBoxBlock .taberBox .outTaber image{
    height: 46rpx;
}


.containerBox{
    margin: 28rpx 35rpx;
}
.containerBox .commenterBox{
    height: 80rpx; 
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.containerBox .commenterBox .commenterInform image{
    height: 60rpx
}
.containerBox .commenterBox .commenterInform{
    height: 75rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.containerBox .commenterBox .likeNum{
    width: 100rpx;
    height: 70%;
    margin-right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.containerBox .commenterBox .likeNum image{
    height: 100%;
}
.containerBox .commentContent{
    word-wrap: break-word;
    white-space: pre-wrap;
    width: 100%;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 26px;
    text-align: justify;
}
.textControlBox{
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: row;
    align-items: center;
    margin: 10rpx 0;
}
.textControl{
    font-size: 26rpx;
    font-weight: 550;
    color: #80d0ac;
    line-height: 32rpx;
    margin-right: 10rpx;
}
.three{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
}

.end{
    margin-top: 60rpx;
    margin-bottom: 180rpx;
    display: flex;
    justify-content: center;
    font-size: 28rpx;
}

.comInputBox{
    height: 100rpx;
    width: 100%;
    background-color: white;
    position: fixed;
    bottom: 0;
    border-top: 2rpx solid #bbbbbb;
    display: flex;
    flex-direction: row;

}
.comInputBox .inputBox{
    margin-left: 3%;
    margin-right: 1%;
    margin-top: 15rpx;
    width: 75%;
    height: 70rpx;
    background-color: #f8f8f8;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
}
.comInputBox .comIconBox{
    width: 10%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.comInputBox .comIconBox image{
    height: 64rpx;
}
